    "def RW(x_0: float, p: list[float], steps: int) -> tuple[float, list, int]:\n",
    "    '''\n",
    "\n",
    "    '''\n",
    "\n",
    "    states=np.zeros(steps)\n",
    "    states[0] = x_0\n",
    "\n",
    "    for i in range(steps-1):\n",
    "        \n",
    "        move = np.random.choice([1, -1], p=p)\n",
    "        states[i+1] = states[i] + move\n",
    "\n",
    "    return np.array(range(steps)), states"
   ]
